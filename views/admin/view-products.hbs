<div class="max-w-6xl mx-auto my-10 px-4">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Product Management</h2>

  <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
    <table class="w-full border border-gray-200">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="py-3 px-4 text-left">Name</th>
          <th class="py-3 px-4 text-left">Description</th>
          <th class="py-3 px-4 text-left">Price (₹)</th>
          <th class="py-3 px-4 text-left">Image</th>
          <th class="py-3 px-4 text-center" colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr class="border-b hover:bg-gray-100">
          <td class="py-2 px-4">{{this.name}}</td>
          <td class="py-2 px-4">{{this.des}}</td>
          <td class="py-2 px-4">₹{{this.price}}</td>
          <td class="py-2 px-4">
            <img src="{{this.image}}" alt="No image" class="w-[70px] h-[40px] object-fit rounded">
          </td>
          <td class="py-2 px-4 text-center">
            <a href="/admin/edit/{{this._id}}" 
               class="inline-block bg-blue-600 text-white text-sm px-3 py-1 rounded hover:bg-blue-700 transition">
              Edit
            </a>
          </td>
          <td class="py-2 px-4 text-center">
            <a href="/admin/delete/{{this._id}}" 
               onclick="return confirm('Confirm delete {{this.name}}?')" 
               class="inline-block bg-red-600 text-white text-sm px-3 py-1 rounded hover:bg-red-700 transition">
              Delete
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="text-right mt-6">
    <a href="/admin/add-products" 
       class="inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
      Add Products
    </a>
  </div>
</div>
