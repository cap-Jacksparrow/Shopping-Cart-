<div class="max-w-lg mx-auto my-12 bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Add New Product</h2>

  <form action="/admin/add-products" method="post" enctype="multipart/form-data" class="space-y-5">
    
    <!-- Product Name -->
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name:</label>
      <input type="text" id="name" name="name" required
        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200" />
    </div>
    
    <!-- Description -->
    <div>
      <label for="des" class="block text-sm font-medium text-gray-700 mb-1">Description:</label>
      <textarea id="des" name="des" rows="3" required
        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"></textarea>
    </div>
    
    <!-- Price -->
    <div>
      <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price (â‚¹):</label>
      <input type="number" id="price" name="price" min="0" step="0.01" required
        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200" />
    </div>
    
    <!-- Image -->
    <div>
      <label for="image" class="block text-sm font-medium text-gray-700 mb-1">Image:</label>
      <input type="text" id="image" name="image" required placeholder="paste image url"
        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200 text:mr-4 text:py-2 text:px-4 text:rounded-md text:border-0 text-sm font-medium :text-white" />
    </div>
    
    <!-- Submit Button -->
    <button type="submit" 
      class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors">
      Submit
    </button>
  </form>
</div>
