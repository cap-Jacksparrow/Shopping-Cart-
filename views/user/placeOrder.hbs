<div class="my-10 flex justify-center">
  <div class="w-full max-w-3xl bg-white p-6 shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center border-b pb-2 mb-6">ðŸ§¾ Billing Address</h2>

    <form id="checkout-form" novalidate>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="firstName" class="block text-gray-700 mb-1">First Name</label>
          <input 
            type="text" 
            name="firstname" 
            id="firstName" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div>
          <label for="lastName" class="block text-gray-700 mb-1">Last Name</label>
          <input 
            type="text" 
            name="lastname" 
            id="lastName" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div class="md:col-span-2">
          <label for="email" class="block text-gray-700 mb-1">Email <span class="text-gray-500 text-sm">(optional)</span></label>
          <input 
            type="email" 
            name="email" 
            id="email" 
            placeholder="you@example.com"
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div class="md:col-span-2">
          <label for="address" class="block text-gray-700 mb-1">Address</label>
          <input 
            type="text" 
            name="address" 
            id="address" 
            placeholder="1234 Main St"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div>
          <label for="zipcode" class="block text-gray-700 mb-1">Pin Code</label>
          <input 
            type="text" 
            name="pincode" 
            id="zipcode" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>
      </div>

      <hr class="my-6 border-gray-300">

      <h4 class="text-xl font-semibold mb-3">ðŸ’³ Payment</h4>
      <div class="space-y-2">
        <label class="flex items-center space-x-2">
          <input id="cod" name="paymentMethod" type="radio" value="cod" required class="h-4 w-4 text-blue-500">
          <span>Cash on Delivery</span>
        </label>

        <label class="flex items-center space-x-2">
          <input id="card" name="paymentMethod" type="radio" value="card" class="h-4 w-4 text-blue-500">
          <span>Debit Card</span>
        </label>
      </div>

      <h4 class="mt-6 text-lg font-bold">Total: â‚¹{{total}}</h4>

      <input type="hidden" name="user" value="{{user._id}}">

      <button 
        type="submit" 
        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg text-lg mt-4"
      >
        Continue to Checkout
      </button>
    </form>
  </div>
</div>

<script>
  $('#checkout-form').submit((e) => {
    e.preventDefault();
    $.ajax({
      url: '/checkout',
      method: 'post',
      data: $('#checkout-form').serialize(),
      success: (response) => {
        if (response.status) location.href = '/order-success';
      },
    });
  });
</script>
