<div class="max-w-6xl mx-auto my-8 px-4">
  <h2 class="text-2xl font-bold text-center mb-6 border-b-2 border-gray-300 pb-2">
    ðŸ“¦ Order Details
  </h2>

  <div class="overflow-x-auto shadow-lg rounded-lg">
    <table class="min-w-full border border-gray-300 text-center align-middle">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="px-4 py-2 border">Date</th>
          <th class="px-4 py-2 border">Total (â‚¹)</th>
          <th class="px-4 py-2 border">Payment Mode</th>
          <th class="px-4 py-2 border">Status</th>
          <th class="px-4 py-2 border">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr class="hover:bg-gray-100">
          <td class="px-4 py-2 border">{{this.Date}}</td>
          <td class="px-4 py-2 border">{{this.TotalAmount}}</td>
          <td class="px-4 py-2 border">{{this.paymentmethod}}</td>
          <td class="px-4 py-2 border">
            <span class="
              px-2 py-1 rounded text-white text-sm
              {{#if (eq this.status 'placed')}}bg-green-500
              {{else if (eq this.status 'pending')}}bg-yellow-500
              {{else}}bg-blue-500{{/if}}">
              {{this.status}}
            </span>
          </td>
          <td class="px-4 py-2 border">
            <a href="/vieworderproducts/{{this._id}}" 
               class="inline-block px-3 py-1 text-sm border border-blue-500 text-blue-500 rounded hover:bg-blue-500 hover:text-white transition">
              View Products
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
