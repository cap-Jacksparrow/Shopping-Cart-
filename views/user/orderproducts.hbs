<div class="container mx-auto px-4">
  <div class="flex flex-wrap -mx-4">
    {{#each products}}
    <div class="w-full sm:w-1/2 md:w-1/3 px-4 mb-6 flex justify-center">
      <div class="bg-white rounded-lg shadow-md w-64 overflow-hidden">
        <img src="{{this.product.image}}" alt="{{this.product.name}}" class="w-full h-44 object-fit">
        <div class="p-4">
          <h5 class="text-lg font-semibold text-gray-800">{{this.product.name}}</h5>
          <p class="text-gray-500 text-sm">{{this.product.des}}</p>
          <h6 class="text-blue-600 font-bold mt-2">â‚¹{{this.product.price}}</h6>
          <h6 class="text-gray-600 mt-1">Quantity: {{this.qty}}</h6>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
